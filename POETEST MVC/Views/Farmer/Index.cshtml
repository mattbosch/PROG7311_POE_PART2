@model IEnumerable<POETEST_MVC.Models.Farmer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Farmers</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p>
                @Html.ActionLink("Create New Farmer", "CreateFarmer", null, new { @class = "btn btn-primary" })
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Farmer ID</th>
                        <th>Farmer Name</th>
                        <th>User ID</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.farmerID)</td>
                            <td>@Html.DisplayFor(modelItem => item.FarmerName)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                            <td>
                                @Html.ActionLink("View Products", "ViewProducts", new { farmerID = item.farmerID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
